{
  "name": "@magma73/modal-react-typescript",
  "description": "A simple and customizable modal component for React or Typescript applications.",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/modal.umd.cjs",
  "module": "./dist/modal.js",
  "exports": {
    ".": {
      "import": "./dist/modal.js",
      "require": "./dist/modal.umd.cjs"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
